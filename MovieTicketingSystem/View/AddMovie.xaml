<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MovieTicketingSystem.View.AddMovie"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MovieTicketingSystem.View"
    xmlns:vm="clr-namespace:MovieTicketingSystem.ViewModel"
    x:DataType="vm:AddMovieViewModel">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="WidthRequest" Value="200" />
            </Style>

            <Style TargetType="Entry">
                <Setter Property="WidthRequest" Value="300" />
            </Style>

            <Style TargetType="Image">
                <Setter Property="WidthRequest" Value="300" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="WidthRequest" Value="200" />
                <Setter Property="Background" Value="#cc4f46" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout
        Margin="20"
        HorizontalOptions="Center"
        Spacing="10">
        <HorizontalStackLayout>
            <Label Text="Movie Name" />
            <Border>
                <Entry Text="{Binding Movie.Name}" />
            </Border>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Movie Description" />
            <Border>
                <Entry Text="{Binding Movie.Description}" />
            </Border>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Movie Date" />
            <Border>
                <DatePicker Date="{Binding Date}" />
            </Border>
        </HorizontalStackLayout>
        
        <HorizontalStackLayout>
            <Label Text="Movie Start Time" />
            <Border>
                <TimePicker Format="HH:mm" Time="{Binding StartTime}" />
            </Border>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Movie End Time" />
            <Border>
                <TimePicker Format="HH:mm" Time="{Binding EndTime}" />
            </Border>
        </HorizontalStackLayout>
        
        <HorizontalStackLayout Spacing="20">
            <RadioButton Content="Upcoming" IsChecked="{Binding Movie.IsUpcoming}" />
            <RadioButton Content="Now Showing" IsChecked="{Binding Movie.IsNowShowing}" />
        </HorizontalStackLayout>

        <Button Command="{Binding UploadImageCommand}" Text="Upload Image" />
        <Image Source="{Binding MovieImageSource, TargetNullValue='no selected image'}" />

        <Button Text="Save Movie Details" Command="{Binding SaveCommand}"/>
    </StackLayout>
</ContentPage>