<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MovieTicketingSystem.View.AddCinema"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:MovieTicketingSystem.ViewModel"
    Title="AddCinema"
    x:DataType="vm:AddCinemaViewModel">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="WidthRequest" Value="200" />
            </Style>
            <Style TargetType="Entry">
                <Setter Property="WidthRequest" Value="300" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="WidthRequest" Value="200" />
                <Setter Property="Background" Value="#cc4f46" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>

    <Frame BackgroundColor="Black" BorderColor="Black">
        <VerticalStackLayout>
            <Image
                HorizontalOptions="Start"
                Source="logoww.png"
                WidthRequest="350" />
            <HorizontalStackLayout
                Margin="0,50,0,0"
                HorizontalOptions="Center"
                Spacing="10">
                <Frame
                    BackgroundColor="Black"
                    BorderColor="Gray"
                    CornerRadius="25"
                    HeightRequest="300"
                    WidthRequest="500">
                    <VerticalStackLayout Spacing="5">
                        <HorizontalStackLayout>
                            <Label Text="Cinema Branch" />
                            <Border Margin="-70,0,0,0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10,10,10,10" />
                                </Border.StrokeShape>
                                <Entry Text="{Binding Cinema.Mall}" />
                            </Border>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout>
                            <Label Text="Location / Address" />
                            <Border Margin="-70,0,0,0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10,10,10,10" />
                                </Border.StrokeShape>
                                <Entry Text="Binding here" />
                            </Border>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout>
                            <Label Text="Capacity" />
                            <Border Margin="-70,0,0,0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10,10,10,10" />
                                </Border.StrokeShape>
                                <Entry Text="Binding here" />
                            </Border>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Margin="120,30,0,0" Spacing="20">
                            <Button
                                CornerRadius="20"
                                FontSize="12"
                                Text="Save Details"
                                WidthRequest="100" />
                            <Button
                                CornerRadius="20"
                                FontSize="12"
                                Text="Reset"
                                WidthRequest="100" />
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                </Frame>

            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Frame>
</ContentPage>