<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MovieTicketingSystem.View.AddMall"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:MovieTicketingSystem.Model"
    xmlns:vm="clr-namespace:MovieTicketingSystem.ViewModel"
    Title="AddMall"
    x:DataType="vm:AddMallViewModel">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Start" />
                <Setter Property="WidthRequest" Value="100" />
            </Style>
            
            <Style TargetType="Entry">
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Start" />
                <Setter Property="WidthRequest" Value="200" />
            </Style>
            <Style TargetType="Button">

                <Setter Property="WidthRequest" Value="150" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    

    <ScrollView >
        <Frame BackgroundColor="Black" BorderColor="Black" >
            <VerticalStackLayout >
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                    <Frame BackgroundColor="Black" WidthRequest="500" HeightRequest="200">
                        <VerticalStackLayout Spacing="10">
                            <HorizontalStackLayout>
                                <Label Text="Mall Name" />
                                <Border>
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10,10,10,10"/>
                                    </Border.StrokeShape>
                                    <Entry Text="{Binding Mall.Name}" />
                                </Border>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout>
                                <Label Text="Mall Address" />
                                <Border>
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10,10,10,10"/>
                                    </Border.StrokeShape>
                                    <Entry Text="{Binding Mall.Address}" />
                                </Border>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                                <Button Command="{Binding SaveCommand}" Text="Save Details" CornerRadius="20" BackgroundColor="Red" TextColor="white"/>
                                <Button Command="{Binding ResetCommand}" Text="Reset"  CornerRadius="20" BackgroundColor="Red" TextColor="white"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                    <Frame BackgroundColor="Black"  WidthRequest="500" HorizontalOptions="Center">
                        <VerticalStackLayout>
                            <HorizontalStackLayout>
                                <CollectionView EmptyView="No Mall Branches yet" ItemsSource="{Binding MallCollection}" >
                                    <CollectionView.Header>
                                        <Grid ColumnDefinitions="*,*"  Margin="100,0,0,0" Padding="10">
                                            <Label Text="NAME"/>
                                            <Label Text="ADDRESS" Grid.Column="1"/>
                                         </Grid>
                                        </CollectionView.Header>
                                    <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="model:Mall">
                                            <Grid ColumnDefinitions="*,*" Margin="100,0,0,0" Padding="10">
                                        <Label Text="{Binding Name}" />
                                         <Label Text="{Binding Address}" Grid.Column="1"/>
                                     </Grid>
                                 </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                    </CollectionView>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                        
                    </Frame>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Frame>
    </ScrollView>
    
</ContentPage>